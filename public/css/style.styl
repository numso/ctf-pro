*
  padding: 0
  margin: 0
  font-family: TrebuchetMS, Helvetica, sans-serif
  // background-color: black

canvas
  width: 100%
  height: auto

#footer
  background-color: lightblue
  position: absolute
  bottom: 0
  width: 100%

.center
  margin: auto
  position: absolute
  top: 0
  left: 0
  bottom: 0
  right: 0

#alerts
  font-size: 36px
  font-weight: bold
  text-align: center
  height: 25px
  color: white
  z-index: 1

  &.a
    background-color: rgba(0,0,0,.5)
    padding: 20px

  &.b
    background-color: rgba(0,0,0,.5)
    padding: 20px

#timer
  text-align: center
  padding-top: 25px
  font-size: 36px

h1
  float: left

button
  float: right
  margin-right: 10px
  margin-top: 10px

.a
  color: red !important

.b
  color: rgb(110, 110, 255) !important

.the-stuffs
  float: right

#allChats
  position: absolute
  bottom: 0
  z-index: 2
  margin-left: 100px
  margin-bottom: 100px
  padding: 10px
  background-color: rgba(0,0,0,.7)
  min-width: 400px

  span
    color: white
    font-size: 18px
    display: block

#chatBox
  position: absolute
  bottom: 0
  margin-bottom: 70px
  margin-left: 100px
  z-index: 2
  left: 0
  width: 400px
  display: none

#gameOver
  position: absolute
  text-align: center
  color: #FFFFFF
  font-size: 30px
  top: 10%
  display: none
  width: 100%
